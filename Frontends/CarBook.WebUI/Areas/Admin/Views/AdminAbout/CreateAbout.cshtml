@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hakkımızda Kısmı Oluşturma</h4>
                        <formd ata-action-type ="create" asp-action="CreateAbout" method="post">
                            <div class="form-group">
                                <label asp-for="Title">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Başlık Girişi Yapınız" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <textarea class="form-control" asp-for="Description" rows="4" placeholder="Açıklama Girişi Yapınız"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl">Resim URL</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim Url Girişi Yapınız" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <button type="submit" id="btn1" class="btn btn-primary waves-effect waves-light">Bilgi Ekle</button>
                            <a href="/Admin/AdminAbout/Index" class="btn btn-secondary waves-effect waves-light">İptal</a>
                        </formd>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
