@model List<ResultBannerDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Ana Sayfa Banner Alanı</h4>
                            <p class="card-subtitle mb-4">Ana sayfanın banner alanını düzenleme.</p>
                            @if (Model.Count == 0)
                            {
                                <div class="alert alert-danger at-3" role="alert">
                                    <p><i>Daha önce eklenen herhangi bir banner bulunamadı. <b>Banner Ekle</b> butonunu kullanarak yeni banner ekleyebilirsiniz</i></p>
                                    <a href="/Admin/AdminBanner/CreateBanner/" class="btn btn-outline-primary">Banner Ekle</a>
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table mb-0">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Başlık</th>
                                                <th>Banner Görseli</th>
                                                <th>Açıklama</th>
                                                <th>Video URL</th>
                                                <th>Video Açıklama</th>
                                                <th>Videoyu Göster</th>
                                                <th>Sil</th>
                                                <th>Güncelle</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                count++;
                                                <tr>
                                                    <th scope="row">@count</th>
                                                    <td>@item.Title</td>
                                                    <td>@item.BannerImageUrl</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.VideoUrl</td>
                                                    <td>@item.VideoDescription</td>
                                                    <td><a href="@item.VideoUrl" class="btn btn-outline-dark" target="_blank">Videoyu Göster</a></td>
                                                    <td><a href="/Admin/AdminBanner/RemoveBanner/@item.BannerID" class="btn btn-outline-danger btn-sm btn-delete">Sil</a></td>
                                                    <td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerID" class="btn btn-outline-success">Güncelle</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
