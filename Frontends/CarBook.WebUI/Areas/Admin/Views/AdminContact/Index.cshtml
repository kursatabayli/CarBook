@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gelen Mesajlar</h4>
                        <p class="card-subtitle mb-4">İletişim kısmından gelen mesajlar.</p>
                        <table id="basic-datatable" class="table dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İsim</th>
                                    <th>Konu</th>
                                    <th>Email</th>
                                    <th>Tarih</th>
                                    <th>Mesaj</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i=0;i<Model.Count;i++)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@Model[i].Name</td>
                                        <td>@Model[i].Subject</td>
                                        <td>@Model[i].Email</td>
                                        <td>@Model[i].SendDate.ToShortDateString()</td>
                                        <td>@Model[i].Message</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
