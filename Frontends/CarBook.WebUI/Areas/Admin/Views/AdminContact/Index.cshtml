@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 1;
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Gelen Mesajlar</h4>
                            <p class="card-subtitle mb-4">İletişim kısmından gelen mesajlar.</p>
                            <table id="basic-datatable" class="table table-centered table-striped table-bordered dt-responsive nowrap" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>İsim</th>
                                        <th>Konu</th>
                                        <th>Email</th>
                                        <th>Tarih ve Saat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr data-message="@item.Message">
                                            <td>
                                                @count
                                                <button class="btn btn-link p-0 ml-2 expand-icon" style="font-size: 16px;"><i class="fas fa-plus-circle"></i></button>
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.Subject</td>
                                            <td>@item.Email</td>
                                            <td>@item.SendDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>