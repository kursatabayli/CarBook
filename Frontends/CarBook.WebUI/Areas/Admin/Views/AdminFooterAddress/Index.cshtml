@model List<ResultFooterAddressDto>

@{
    ViewData["Title"] = "İletişim ve Adres Alanı";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<script>
    $(document).ready(function () {
        $('.btn-delete').click(function (e) {
            e.preventDefault();
            var url = $(this).attr('href');

            swal({
                title: "Bu iletişim bilgisini silmek istediğinize emin misiniz?",
                text: "Sildiğiniz takdirde veriler tamamen kaybolacak!",
                icon: "warning",
                buttons: {
                    cancel: {
                        text: "İptal",
                        value: null,
                        visible: true,
                        className: "btn btn-secondary",
                        closeModal: true,
                    },
                    confirm: {
                        text: "Sil",
                        value: true,
                        visible: true,
                        className: "btn btn-danger",
                        closeModal: false
                    }
                },,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: url,
                            method: 'POST',
                            success: function () {
                                swal("Özellik Kaydı Silindi!", {
                                    icon: "success",
                                }).then(() => {
                                    location.reload();
                                });
                            },
                            error: function () {
                                swal("Hata!", "Silme işlemi başarısız oldu.", "error");
                            }
                        });
                    }
                });
        });
    });
</script>


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">İletişim ve Adres Alanı</h4>
                        <p class="card-subtitle mb-4">İletişim ve adres bilgilerini düzenleme.</p>

                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                <p><i>Daha önce eklenen herhangi bir iletişim bilgisi bulunamadı. <b>Ekle</b> butonunu kullanarak yeni iletişim bilgisi ekleyebilirsiniz.</i></p>
                                <a href="/Admin/AdminFooterAddress/CreateFooterAddress/" class="btn btn-outline-primary mt-4">Ekle</a>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>Adres</th>
                                            <th>Telefon</th>
                                            <th>Email</th>
                                            <th>Açıklama</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@item.Address</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Email</td>
                                                <td>@item.Description</td>
                                                <td><a href="/Admin/AdminFooterAddress/RemoveFooterAddress/@item.FooterAddressID" class="btn btn-outline-danger btn-sm btn-delete">Sil</a></td>
                                                <td><a href="/Admin/AdminFooterAddress/UpdateFooterAddress/@item.FooterAddressID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
