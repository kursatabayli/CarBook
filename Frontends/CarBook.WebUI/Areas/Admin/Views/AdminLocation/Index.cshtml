@model List<ResultLocationDto>

@{
    ViewData["Title"] = "Lokasyonlar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Lokasyonlar</h4>
                            <p class="card-subtitle mb-4">Firmaya ait lokasyonları yönetebilirsiniz.</p>

                            @if (Model.Count == 0)
                            {
                                <div class="alert alert-info" role="alert">
                                    <p><i>Listede herhangi bir lokasyon bulunmamaktadır. <b>Lokasyon Ekle</b> butonunu kullanarak yeni lokasyonlar ekleyebilirsiniz.</i></p>
                                </div>
                            }
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Lokasyon</th>
                                            <th>Lokasyonu Aç</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td><a href=@item.Maps class="btn btn-outline-info" target="_blank">Konuma Git</a></td>
                                                <td><a href="/Admin/AdminLocation/RemoveLocation/@item.LocationID" class="btn btn-outline-danger btn-sm btn-delete">Sil</a></td>
                                                <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-outline-primary mt-4">Lokasyon Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
