@model List<ResultServiceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmetler</h4>
                        <p class="card-subtitle mb-4">Firmanın verdiği hizmetlere dair bilgileri düzenleme ve listeleme.</p>

                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-info" role="alert">
                                <p><i>Daha önce eklenen herhangi bir hizmet bulunamadı. <b>Hizmet Oluştur</b> butonunu kullanarak yeni bir hizmet ekleyebilirsiniz.</i></p>
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Hizmet Adı</th>
                                        <th>Hizmet Açıklaması</th>
                                        <th>Hizmet İkon</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.IconUrl</td>
                                            <td><a href="/Admin/AdminService/RemoveService/@item.ServiceID" class="btn btn-outline-danger btn-sm btn-delete">Sil</a>
                                            </td><td><a href="/Admin/AdminService/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="/Admin/AdminService/CreateService/" class="btn btn-outline-primary mt-4">Hizmet Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
