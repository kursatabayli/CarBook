@model List<ResultSocialMediaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Firmaya Ait Sosyal Medya Hesapları</h4>
                            <p class="card-subtitle mb-4">Sosyal medya hesaplarını düzenleme ve listeleme.</p>

                            @if (Model.Count == 0)
                            {
                                <div class="alert alert-info" role="alert">
                                    <p><i>Daha önce eklenen herhangi bir sosyal medya hesabı bulunamadı. <b>Hesap Ekle</b> butonunu kullanarak yeni bir sosyal medya hesabı ekleyebilirsiniz.</i></p>
                                </div>
                            }

                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Sosyal Medya</th>
                                            <th>URL</th>
                                            <th>İkon</th>
                                            <th>Hesaba Git</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td>@item.Url</td>
                                                <td>@item.Icon</td>
                                                <td><a href="/Admin/AdminSocialMedia/SocialMediaDetail/@item.SocialMediaID" class="btn btn-outline-info" target="_blank">Hesaba Git</a></td>
                                                <td><a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger btn-sm btn-delete">Sil</a></td>
                                                <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <a href="/Admin/AdminSocialMedia/CreateSocialMedia/" class="btn btn-outline-primary mt-4">Hesap Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
