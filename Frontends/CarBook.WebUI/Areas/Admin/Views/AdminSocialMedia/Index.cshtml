@model List<ResultSocialMediaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<script>
    $(document).ready(function () {
        $('.btn-delete').click(function (e) {
            e.preventDefault();
            var url = $(this).attr('href');

            swal({
                title: "Bu sosyal medya hesabını silmek istediğinize emin misiniz?",
                text: "Sildiğiniz takdirde veriler tamamen kaybolacak!",
                icon: "warning",
                buttons: {
                    cancel: {
                        text: "İptal",
                        value: null,
                        visible: true,
                        className: "btn btn-secondary",
                        closeModal: true,
                    },
                    confirm: {
                        text: "Sil",
                        value: true,
                        visible: true,
                        className: "btn btn-danger",
                        closeModal: false
                    }
                },
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: url,
                            method: 'POST',
                            success: function () {
                                swal("Özellik Kaydı Silindi!", {
                                    icon: "success",
                                }).then(() => {
                                    location.reload();
                                });
                            },
                            error: function () {
                                swal("Hata!", "Silme işlemi başarısız oldu.", "error");
                            }
                        });
                    }
                });
        });
    });
</script>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Firmaya Ait Sosyal Medya Hesapları</h4>
                        <p class="card-subtitle mb-4">Sosyal medya hesaplarını düzenleme ve listeleme.</p>

                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-info" role="alert">
                                <p><i>Daha önce eklenen herhangi bir sosyal medya hesabı bulunamadı. <b>Hesap Ekle</b> butonunu kullanarak yeni bir sosyal medya hesabı ekleyebilirsiniz.</i></p>
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Sosyal Medya</th>
                                        <th>URL</th>
                                        <th>İkon</th>
                                        <th>Hesaba Git</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Url</td>
                                            <td>@item.Icon</td>
                                            <td><a href="/Admin/AdminSocialMedia/SocialMediaDetail/@item.SocialMediaID" class="btn btn-outline-info">Hesaba Git</a></td>
                                            <td><a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger btn-sm btn-delete">Sil</a></td>
                                            <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="/Admin/AdminSocialMedia/CreateSocialMedia/" class="btn btn-outline-primary mt-4">Hesap Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
