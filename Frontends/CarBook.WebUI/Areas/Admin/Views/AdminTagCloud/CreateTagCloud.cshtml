@model CreateTagCloudDto

@{
    ViewData["Title"] = "CreateTagCloud";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Yeni Etiket Oluşturma</h4>
                            <form data-action-type="create" asp-action="CreateTagCloud" method="post">
                                <div class="form-group">
                                    <label asp-for="Title">Etiket</label>
                                    <input type="text" class="form-control" asp-for="Title" placeholder="Etiket Girişi" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Etiketu Kaydet</button>
                                <a href="/Admin/AdminTagCloud/Index" class="btn btn-secondary waves-effect waves-light">İptal</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
