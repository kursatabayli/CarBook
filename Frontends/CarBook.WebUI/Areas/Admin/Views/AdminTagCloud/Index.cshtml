@model List<ResultTagCloudDto>

@{
    ViewData["Title"] = "Etiketler";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Etiketler</h4>
                            <p class="card-subtitle mb-4">Bloglara Ait Etiketler</p>

                            @if (Model.Count == 0)
                            {
                                <div class="alert alert-info" role="alert">
                                    <p><i>Herhangi bir etiket bulunmamaktadır. <b>Etiket Ekle</b> butonunu kullanarak yeni etiketler ekleyebilirsiniz.</i></p>
                                </div>
                            }
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Etiket</th>
                                            <th>Etiket Blogları</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Title</td>
                                                <td><a href=/BlogTags/Index/@item.TagCloudId class="btn btn-outline-info" target="_blank">Bloglara Git</a></td>
                                                <td><a href="/Admin/AdminTagCloud/RemoveTagCloud/@item.TagCloudId" class="btn btn-outline-danger btn-sm btn-delete">Sil</a></td>
                                                <td><a href="/Admin/AdminTagCloud/UpdateTagCloud/@item.TagCloudId" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <a href="/Admin/AdminTagCloud/CreateTagCloud/" class="btn btn-outline-primary mt-4">Etiket Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
