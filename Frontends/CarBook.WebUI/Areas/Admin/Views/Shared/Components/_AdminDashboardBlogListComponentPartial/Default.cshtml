@model List<ResultGetAllBlogsWithAuthorsDto>

@{
    int count = 0; 
}

<div class="col-xl-7">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglar</h4>
            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tr>
                        <th>#</th>
                        <th>Blog Başlığı</th>
                        <th>Yazar</th>
                        <th>Kategori</th>
                    </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal">@count </h5></td>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal"><a href="/Blog/BlogDetail/@item.BlogID">@item.Title</a> </h5></td>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal">@item.AuthorName </h5></td>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal">@item.CategoryName</h5></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>