@model List<ResultCarPricingWithCarsDto>

<div class="col-xl-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Son Arabalar</h4>
            <div class="table-responsive">
                <table class="table table-centered table-hover table-xl mb-0" id="recent-orders">
                    <thead>
                        <tr>
                            <th class="border-top-0">Marka</th>
                            <th class="border-top-0">Model</th>
                            <th class="border-top-0">Günlük Fiyat</th>
                            <th class="border-top-0">Haftalık Fiyat</th>
                            <th class="border-top-0">Aylık Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count && i < 5; i++)
                        {
                            <tr>
                                <td class="text-truncate">@Model[i].BrandName</td>
                                <td class="text-truncate">@Model[i].Model</td>
                                <td class="text-truncate">₺ @Model[i].DailyPrice</td>
                                <td class="text-truncate">₺ @Model[i].WeeklyPrice</td>
                                <td class="text-truncate">₺ @Model[i].MonthlyPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-4"><a href="/Admin/AdminCar/Index/" class="btn btn-primary">Devamını Gör</a></div>
        </div>
    </div>
</div>


