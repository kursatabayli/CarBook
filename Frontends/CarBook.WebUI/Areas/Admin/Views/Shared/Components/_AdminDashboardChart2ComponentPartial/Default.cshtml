<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">Filodaki En Değerli Markalar</h4>

            <div style="height: 260px; display: flex; align-items: center; justify-content: center;">
                <canvas id="secondChart"></canvas>
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        var values = document.getElementById('secondChart').getContext('2d');
                        var myChart = new Chart(values, {
                            type: 'pie',
                            data: {
                                labels: ['Chrysler', 'Land Rover', 'Porsche', 'Tesla', 'Rover'],
                                datasets: [{
                                    label: 'Adet: ',
                                    data: [10, 8, 5, 12, 5],
                                    backgroundColor: [
                                        'rgba(255,99,132,0.7)',
                                        'rgba(54,162,235,0.7)',
                                        'rgba(255,206,86,0.7)',
                                        'rgba(75,192,192,0.7)',
                                        'rgba(153,102,255,0.7)',
                                    ],
                                    borderColor: [
                                        'rgba(255,99,132,1)',
                                        'rgba(54,162,235,1)',
                                        'rgba(255,206,86,1)',
                                        'rgba(75,192,192,1)',
                                        'rgba(153,102,255,1)',
                                    ],
                                    borderWidth: 1
                                }]
                            }
                        });
                    });
                </script>
            </div>

            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4>@ViewBag.BrandCount</h4>
                    <p class="text-muted mb-0">Toplam Marka Sayısı</p>
                </div>
                <div class="col-6">
                    <h4>@ViewBag.CarCount</h4>
                    <p class="text-muted mb-0">Toplam Araç Sayısı</p>
                </div>
            </div>
        </div>
    </div>
</div>
