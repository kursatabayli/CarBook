@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/CarBook/Views/Shared/_Layout.cshtml";
}


@await Component.InvokeAsync("_DefaultCoverUILayoutComponentPartial")

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12 featured-top">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center">
                        <form action="/CarBook/Default/ReservationInfos" class="request-form ftco-animate bg-primary" method="post">
                            <h2>Yolculuğunuzu Planlayın</h2>
                            <div class="form-group">
                                <label for="pickUpLocation" class="label">Alış Lokasyonu</label>
                                @Html.DropDownList("pickUpLocation", (List<SelectListItem>)ViewBag.LocationValues, "Aracı Teslim Almak İstediğiniz Lokasyon", new { @class = "form-control firstdropdown" })
                            </div>

                            <div class="form-group">
                                <label for="dropOffLocation" class="label">İade Lokasyonu</label>
                                @Html.DropDownList("dropOffLocation", (List<SelectListItem>)ViewBag.LocationValues, "Aracı Teslim Etmek İstediğiniz Lokasyon", new { @class = "form-control firstdropdown" })
                            </div>

                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="reservationDate" class="label">Rezervasyon Tarihi</label>
                                    <input type="text" class="form-control datepicker" name="reservationDate" id="reservationDate" placeholder="Tarih" />
                                </div>
                                <div class="form-group ml-2">
                                    <label for="reservationTime" class="label">Rezervasyon Saati</label>
                                    <input type="text" class="form-control timepicker" name="reservationTime" id="reservationTime" placeholder="Saat">
                                </div>
                            </div>

                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="returnDate" class="label">İade Tarihi</label>
                                    <input type="text" class="form-control datepicker" name="returnDate" id="returnDate" placeholder="Tarih" />
                                </div>
                                <div class="form-group ml-2">
                                    <label for="returnTime" class="label">İade Saati</label>
                                    <input type="text" class="form-control timepicker" name="returnTime" id="returnTime" placeholder="Saat">
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-secondary py-3 px-4">Hemen Araç Kiralayın</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Araç Kiralamanın En Kolay Yolu</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center">
                                            <span class="flaticon-route"></span>
                                        </div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Rezervasyon Lokasyonunu Seçin</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center">
                                            <span class="flaticon-handshake"></span>
                                        </div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Size En Uygun Teklifi Bulun</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center">
                                            <span class="flaticon-rent"></span>
                                        </div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Aracınızı Rezerve Edin</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a href="/CarBook/CarPricing/Index/" class="btn btn-primary py-3 px-4">Göz At</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Component.InvokeAsync("_DefaultRandom5CarsComponentPartial")

@await Component.InvokeAsync("_AboutUsComponentPartial")

@await Component.InvokeAsync("_DefaultRandom4ServicesComponentPartial")

@await Component.InvokeAsync("_TestimonialComponentPartial")

@await Component.InvokeAsync("_GetLast3BlogsWithAuthorsComponentPartial")

@await Component.InvokeAsync("_DefaultStatisticsComponentPartial")


<style>
    .request-form .form-control {
        background: #1089FF !important;
        color: white;
    }
</style>
