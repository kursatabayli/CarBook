@model List<ResultCommentDto>


<ul class="comment-list">
    @foreach (var item in Model)
    {
        <li class="comment">
            <div class="vcard bio">
                <img src="/Site/images/person_x.jpg" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@item.CreatedDate</div>
                <p>@item.CommentText</p>
            </div>
        </li>
    }
</ul>
