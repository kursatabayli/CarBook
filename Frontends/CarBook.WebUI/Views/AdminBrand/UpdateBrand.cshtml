@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Marka Güncelleme Sayfası</h4>
                        <form asp-action="UpdateBrand" method="post">
                            <input type="hidden" asp-for="BrandID" />
                            <div class="form-group">
                                <label asp-for="Name">Marka Adı</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Marka Güncellemesi Yapınız" />
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
