@model ResultLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
@await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminHeaderPartial.cshtml")

<body>
    <div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="p-5">
                                        <div class="text-dark font-size-22 font-family-secondary text-center mb-5">
                                            <b>CarBook</b>
                                        </div>
                                        <h1 class="h5 mb-1">Hoş Geldiniz!</h1>
                                        <p class="text-muted mb-4">Admin paneline erişmek için e-posta adresinizi ve şifrenizi girin.</p>
                                        <form class="user" asp-action="Index" method="post">
                                            <div class="form-group">
                                                <input type="email" asp-for="Email" class="form-control form-control-user" placeholder="E-posta Adresi">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Şifre">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Giriş Yap </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminScriptPartial.cshtml")
</body>
</html>
