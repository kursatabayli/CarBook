@model CreateRegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

@await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminHeaderPartial.cshtml")

<body>

    <div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="p-5">
                                        <div class="text-dark font-size-22 font-family-secondary text-center mb-5">
                                            <b>CarBook</b>
                                        </div>
                                        <h1 class="h5 mb-1 text-center">Bir Hesap Oluştur</h1>
                                        <p class="text-muted mb-4 text-center">Hesabınız yok mu? Hemen bir tane oluşturun!</p>
                                        <form class="user" asp-controller="Register" asp-action="CreateAppUser" method="post">
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="text" asp-for="Name" class="form-control form-control-user" placeholder="Ad">
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="text" asp-for="LastName" class="form-control form-control-user" placeholder="Soyad">
                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="email" asp-for="Email" class="form-control form-control-user" placeholder="Email Adresi">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Şifre">
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="password" class="form-control form-control-user" placeholder="Şifreyi Tekrarla">
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Hesap Oluştur </button>
                                        </form>
                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-0">Zaten hesabın var mı?  <a href="/Login/Index" class="text-muted font-weight-medium ml-1"><b>Giriş Yap</b></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminScriptPartial.cshtml")

</body>
</html>
